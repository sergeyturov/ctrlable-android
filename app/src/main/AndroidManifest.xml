<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ron.ctrlable.ctrlable">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Black.NoTitleBar">
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ControlPanelActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".activities.TypeSelectorActivity" />
        <activity android:name=".activities.DeviceSelectorActivity" />
        <activity
            android:name=".activities.SettingsActivity"
            android:theme="@android:style/Theme.Translucent" />
        <activity android:name=".activities.CustomActivity" />
    </application>
</manifest>